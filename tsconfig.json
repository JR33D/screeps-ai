{
    "compileOnSave": true,
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "module": "commonjs",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "outDir": "./dist",
        "removeComments": false,
        "strictNullChecks": true,
        "target": "es6",
        "types": [
            "lodash",
            "node"
        ]
    },
    "exclude": [
        "src/**/*.js"
    ],
    "files": [
        "./node_modules/screeps-typescript-declarations/dist/screeps.d.ts"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
