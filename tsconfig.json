    "./typings/globals/screeps/index.d.ts",
    "./typings/index.d.ts",
    "./src/builder.ts",
    "./src/carrier.ts",
    "./src/claimer.ts",
    "./src/config.ts",
    "./src/creep-assembler.ts",
    "./src/creep.ts",
    "./src/fighter.ts",
    "./src/flag-miner.ts",
    "./src/flag.ts",
    "./src/link.ts",
    "./src/main.ts",
    "./src/misc.ts",
    "./src/room.ts",
    "./src/settler.ts",
    "./src/tower.ts"
