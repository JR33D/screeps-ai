{
    "compileOnSave": true,
    "compilerOptions": {
        "alwaysStrict": true,
        "declaration": true,
        "module": "commonjs",
        "noFallthroughCasesInSwitch": true,
        "noResolve": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "outDir": "dist/",
        "removeComments": false,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es6",
        "types": [
            "lodash",
            "node"
        ]
    },
    "exclude": [
        "src/**/*.js"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
